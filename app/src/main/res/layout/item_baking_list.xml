<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_baking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bakes_grid_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_baking_poster"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_baking_poster"
                android:layout_alignLeft="@id/image_baking_poster"
                android:layout_alignRight="@id/image_baking_poster"
                android:background="#80ffd0b0"
                >

                <TextView
                    android:id="@+id/text_recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="24dp"
                    tools:text="Hello its me :).Hello its me :). Hello its me :). Hello its me :)"
                    android:textColor="@color/colorSecondary"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    />
            </FrameLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>