<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/linear_layout_item_recipe_step"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/linear_layout_item_recipe_step_padding_left"
              android:paddingRight="@dimen/linear_layout_item_recipe_step_padding_right"
              android:paddingTop="@dimen/linear_layout_item_recipe_step_padding_top"
              android:orientation="vertical">

    <TextView
        android:id="@+id/text_recipe_step_short_description"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_recipe_step_short_description_height"
        android:textColor="@color/colorSecondary"
        android:gravity="center"/>

</LinearLayout>